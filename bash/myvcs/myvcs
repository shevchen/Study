#!/bin/bash

myvcs_init() {
	if [ -a ".$1" ]
	then
		rm -rf ".$1"
	fi
	mkdir ".$1"
	v=".$1/version"
	touch $v
	echo "0" > $v
	f=".$1/backup"
	touch $f
	echo "Initialized."
}

myvcs_commit() {
	read cv < ".$1/version"
	p=".$1/p$cv"
	touch "$p"
	f=".$1/backup"
	/usr/bin/diff "$f" "$1" > "$p"
	v=".$1/version"
	echo $(($cv+1)) > $v
	cat $1 > $f
	echo "Committed."
}

myvcs_status() {
	f=".$1/backup"
	b=`cmp "$1" ".$1/backup"`
	if [ ${#b} -eq 0 ]
	then
		echo "Latest version."
		return 0
	else
		echo "Old version."
		return 1
	fi
}

myvcs_diff() {
	f=".$1/backup"
	/usr/bin/diff "$1" "$f"
}

myvcs_update() {
	f=".$1/backup"
	rm "$1"
	touch "$1"
	for ((i=0;i<$2+1;i+=1));
	do
		patch "$1" ".$1/p$i"
	done
	echo "Updated."
}			

case "$1" in
	"init" )
		myvcs_init $2;;
	"commit" )
		myvcs_commit $2;;	
	"status" )
		myvcs_status $2;;
	"diff" )
		myvcs_diff $2;;
	"update" )
		myvcs_update $2 $3;;
esac
